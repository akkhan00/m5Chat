modules = ["nodejs-20", "python-3.12", "web", "bash"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80

[workflows]
runButton = "Start Chat Server"

[[workflows.workflow]]
name = "Start Chat Server"
author = 46963316
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*main.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"
